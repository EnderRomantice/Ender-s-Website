---
import StaggeredMenu from "../components/StaggeredMenu.tsx";
import FungalGrowthEffect from "../components/FungalGrowthEffect.tsx";
import { menuItems, socialItems } from "../lib/menu_config.ts";
---

<FungalGrowthEffect
    width="100vw"
    height="100vh"
    color="#888888"
    maxLineWidth={0.4}
    minLineWidth={0.04}
    growthSpeed={2.0}
    branchProbability={0.04}
    maxLines={4444}
    maxLineLength={444}
    lineLifetime={444}
    fadeOut={true}
    sensitivity={15}
    enabled={true}
    autoSpawnInterval={4444}
    autoSpawnDelay={444}
    autoSpawnCount={44}
    className="pointer-events-none"
    client:visible
/>
<StaggeredMenu
    class="h-screen"
    position="right"
    items={menuItems}
    socialItems={socialItems}
    displaySocials={true}
    displayItemNumbering={true}
    menuButtonColor="#fff"
    openMenuButtonColor="#000000"
    changeMenuColorOnOpen={true}
    colors={["#B19EEF", "#5227FF"]}
    accentColor="blue"
    isFixed={true}
    client:visible
/>
